---
to: <%= h.src() %>/<%= h.changeCase.lower(name) %>/templates/components/uncategorized/a-throbber/a-throbber.html.twig
---
{% if circle %}
  {% include '@component/a-icon/a-icon.html.twig' with {
    attributes: create_attribute().addClass('a-throbber', 'a-throbber--circle'),
    icon: 'throbber-circle',
    <%= h.changeCase.lower(name) %>_svg_sprite: <%= h.changeCase.lower(name) %>_svg_sprite,
  } only %}
{% else %}
  <div class="a-throbber a-throbber--fullscreen">
    <div class="a-throbber__line"></div>
  </div>
{% endif %}
