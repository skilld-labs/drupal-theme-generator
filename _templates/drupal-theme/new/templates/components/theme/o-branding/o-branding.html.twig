---
to: <%= h.src() %>/<%= h.changeCase.lower(name) %>/templates/components/theme/o-branding/o-branding.html.twig
---
<div{{ attributes.addClass('o-branding') }}>
  <a class="o-branding__link" href="{{ path('<front>') }}" rel="home">
    {% if site_logo %}
      <img class="o-branding__image" src="{{ site_logo }}" alt="{{ 'Home'|t }}"/>
    {% endif %}
    {% if site_name %}
      {% include '@component/a-text/a-text.html.twig' with {
        attributes: create_attribute().addClass('o-branding__text'),
        tag: 'span',
        content: site_name,
        type: 'h4',
      } only %}
    {% endif %}
    {% if site_slogan %}
      {% include '@component/a-text/a-text.html.twig' with {
        attributes: create_attribute().addClass('o-branding__text'),
        tag: 'span',
        content: site_slogan,
        type: 'regular',
      } only %}
    {% endif %}
  </a>
</div>
